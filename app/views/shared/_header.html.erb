<header class="navigation">
  <div class="menu-wrapper">
    <a href="javascript:void(0)" class="logo">
      <%= image_tag 'logo-posplus-72x61.png' %>
    </a>
    <p class="navigation-menu-button" id="js-mobile-menu">MENU</p>
    <div class="nav">
      <ul id="navigation-menu">
        <li class="nav-link"><%= link_to "POS+", home_path %></li>
        <li class="nav-link"><%= link_to "About", pages_about_path %></li>
        <li class="nav-link"><%= link_to "People", people_path %></li>
        <li class="nav-link"><%= link_to "Research", research_index_path %></li>
        <li class="nav-link"><%= link_to "Publications", publications_path %></li>
        <li class="nav-link"><%= link_to "Contact", pages_contact_path %></li>
      </ul>
    </div>
    <div class="navigation-tools">
      <div class="search-bar">
          <%= form_tag search_path, class: "search-and-submit", method: :get do %>
              <%= text_field_tag :q, params[:q], type: "search", placeholder: "Search publications, ..." %>
              <button type="submit"><i class="fa fa-search"></i></button>
          <% end %>
      </div>
      <% if current_user_admin? %>
        <%= link_to "Admin", admin_path, class: "sign-up" %>
      <% end %>
    </div>
  </div>
</header>

