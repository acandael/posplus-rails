<% breadcrumb :publication_series %>
<section class="publications">
    <div class="documents">
      <div class="breadcrumbs">
        <a href="/publications">Publications</a>
        <a href="javascript:void(0)">POS+ Publication Series</a>
      </div>
      <h1>POS+ Publication Series</h1>
      <section class="series">
        <h2>Working Papers</h2>
        <ul>
          <%= render partial: "publication", collection: @publications, locals: { category: "working_paper" } %>
        </ul>
      </section>
      <section class="series">
        <h2>Technical Reports</h2>
        <ul>
          <%= render partial: "publication", collection: @publications, locals: { category: "technical report" } %>
        </ul>
      </section>
    </div>
    <aside class="archive">
      <ul>
      <h2>Archive</h2>
      <% @publications_year.each do |year, pubs| %>
        <li><i class="fa fa-folder left"></i><%= link_to year, archive_path(year) %></a>
      </li>
      <% end %>
      </ul>
    </aside>
</section>

<% content_for :javascript do %>
  <script>
  $(document).ready(function () {
    $('.documents, .archive').matchHeight();
  });
  </script>
<% end %>
