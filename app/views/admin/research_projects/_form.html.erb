<%= form_for [:admin, @research_project] do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <% if @research_project.image %>
      <%= image_tag @research_project.image.url %>
    <% end %>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div>
     <%= f.collection_check_boxes :research_theme_ids, ResearchTheme.all, :id, :title %>
  </div>
  <% if @research_project.new_record? %>
    <%= f.submit "Add Research Project" %>
  <% else %>
    <%= f.submit "Update Research Project" %>
  <% end %>
  <%= link_to 'Cancel', admin_research_projects_path %>
<% end %>
