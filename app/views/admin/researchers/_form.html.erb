<%= form_for [:admin, @researcher] do |f| %>
  <fieldset>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <% if @researcher.image %>
      <%= image_tag @researcher.image.url %>
    <% end %>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div>
     <h3>Courses</h3>
     <%= f.collection_check_boxes :course_ids, Course.all, :id, :title do |b| %>
       <%= b.label() { b.check_box + b.text } %>
     <% end %>
  </div>
  <div>
     <h3>Research Projects</h3>
     <%= f.collection_check_boxes :research_project_ids, ResearchProject.all, :id, :title do |b| %>
       <%= b.label() { b.check_box + b.text } %>
     <% end %>
  </div>
  <% if @researcher.new_record? %>
    <%= f.submit "Add Researcher" %>
  <% else %>
    <%= f.submit "Update Researcher" %>
  <% end %>
  <%= link_to 'Cancel', admin_researchers_path %>
</fieldset>
<% end %>
