<% breadcrumb :researcher, @researcher %>
  <div class="content">
  <h1><%= @researcher.fullname %></h1>
  <p><%= sanitize @researcher.bio, tags: %w(strong i p h3 ul li) %></p>
  <section>
  <h3>Contact</h3>
  <p><i class="fa fa-envelope"></i> <%= mail_to @researcher.email %><br />
  <i class="fa fa-phone"></i> <%= @researcher.phone %></p>
  </section>
  <section>
    <h3>Address</h3>
    <p><%= @researcher.address %></p>
  </section>
  <section>
    <h3>Bibliography</h3>
    <p><%= link_to @researcher.bibliography, @researcher.bibliography %></p>
  </section>
  <section>
    <h3>Courses</h3>
    <ul>
      <% @researcher.courses.each do |course| %>
        <li><%= link_to course.title, admin_course_path(course) %></li>
      <% end %>
    </ul>
  </section>
  <section>
    <h3>Research Projects</h3>
    <ul>
      <% @researcher.research_projects.each do |project| %>
        <li><%= link_to project.title, admin_research_project_path(project) %></li>
      <% end %>
    </ul>
  </section>
</div>
  <p><%= image_tag @researcher.image.url %>
