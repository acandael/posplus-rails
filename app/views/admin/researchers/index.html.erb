<% breadcrumb :researchers %>
<div class="panel">
  <h1>Researchers</h1>
  <%= button_to 'Add Researcher', new_admin_researcher_path, method: "get" %>
  <table class="table-borders">
    <tbody>
      <% @researchers.each do |researcher| %>
        <tr>
          <td><%= link_to researcher.name, admin_researcher_path(researcher) %></td>
          <td><%= link_to "Edit", edit_admin_researcher_path(researcher) %>&nbsp;&nbsp;
            <%= link_to "Delete", admin_researcher_path(researcher), method: :delete, data: { confirm: "Are you sure?" } %>&nbsp;&nbsp;
            <%= link_to toggle_visibility(researcher), hide_admin_researcher_path(researcher), method: :patch, remote: true, id: dom_id(researcher) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
