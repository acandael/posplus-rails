<% breadcrumb :news_items %>
  <h1>News Items</h1>
  <%= button_to "Add News Item", new_admin_news_item_path, method: "get" %>
  <table class="table-borders">
  <tbody>
  <% if @news_items.count != 0 %>
    <% @news_items.each do |news_item| %>
      <tr>
        <td><%= link_to news_item.title, admin_news_item_path(news_item) %></td>
        <td><%= link_to "Edit", edit_admin_news_item_path(news_item) %>&nbsp;&nbsp;<%= link_to "Delete", admin_news_item_path(news_item), method: :delete, data: { confirm: "Are you sure?" } %>&nbsp;&nbsp;
            <%= link_to toggle_visibility(news_item), hide_admin_news_item_path(news_item), method: :patch, remote: true, id: dom_id(news_item) %></td>
      </tr>
    <% end %>
  <% else %>
    <p class="no-items">There are no news items. Click 'Add News Item' to create one.</p>
  <% end %>
  </tbody>
</table>
