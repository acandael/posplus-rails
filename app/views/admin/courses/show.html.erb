<% breadcrumb :course, @course %>
<div class="content">
<h1><%= @course.title %></h1>
<% if @course.researchers.any? %>
  <section>
    <h3>Teached By:</h3>
    <ul>
      <% @course.researchers.each do |researcher| %>
        <li><%= link_to researcher.fullname, admin_researcher_path(researcher) %></li>
      <% end %>
    </ul>
  </section>
<% end %>
</div>
