<%= render layout: 'admin/dashboard' do %>
<h1>Courses</h1>
<%= button_to "Add Course", new_admin_course_path, method: "get" %>
<table class="table-borders">
  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><%= link_to course.title, admin_course_path(course) %></td>
      <td><%= link_to "Edit", edit_admin_course_path(course) %>&nbsp;&nbsp;<%= link_to "Delete", admin_course_path(course), method: :delete, data: { confirm: "Are you sure" } %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<% end %>
